/* mixin */
font-sans()
  font-family "Source Han Sans SC Regular", "Hiragino Sans GB", "Microsoft Yahei", Tahoma, san-serif

font-serif()
  font-family "Source Han Serif SC", "SimSun", serif

font-mono()
  font-family "Source Code Pro", Consolas, monospace

fade(duration)
  transition opacity duration

fadein(dest = 1, duration = .2s)
  opacity dest
  fade(duration)

fadeout(dest = 0, duration = .2s)
  opacity dest
  fade(duration)

resetbox()
  padding 0
  margin 0

borderbox()
  box-sizing border-box

/* atom class */
.shandow
  box-shadow 0 0 5px rgba(0, 0, 0, .5)

/* common */
html,
body
  position relative
  width 100%
  height 100%
  bottom 0
  color #333
  background-color #fff
  overflow hidden
  resetbox()

ul, li,
h1, h2, h3, h4, h5, h6
  resetbox()

/* mask */
.mask
  position absolute
  left 0
  right 0
  top 0
  bottom 0
  background-color rgba(0, 0, 0, .5)
  z-index 10

  &.show
    fadein()

  &.hide
    fadeout()

/* progress bar */
.progbar
  position absolute
  left 0
  right 0
  top 0
  height 5px
  background-color #fff
  border-bottom 1px solid #ccc
  borderbox
  .progbar-bar
    position absolute
    top 0
    bottom 0
    background-color #ddd
    transition all .2s

/* sidebar */
.sidebar
  position absolute
  top 0
  bottom 0
  width 240px
  background-color #2f353a
  transition left .2s
  borderbox()
  z-index 11;

  h1
    height 32px
    padding 20px 0
    border-bottom 1px solid #232d34
    color #d0d0d0
    line-height 32px
    font-sans()
    font-weight 400

  i
    display inline-block
    width 32px
    height 32px
    margin 0 10px
    border 1px solid
    border-radius 50%
    text-align center
    vertical-align middle

  span
    display inline-block
    height 32px
    vertical-align middle

  ul
    margin-top 10px

  li
    list-style none

    a
      display block
      height 18px
      padding 15px 10px
      color #d0d0d0
      font-sans()
      font-size 16px
      line-height 18px
      text-decoration none
      transition all .2s

      &:hover,
      &.active
        color #fff
        background-color #202b33

      &.active
        cursor default;

    &.space
      height 18px

  &.hide
    left -250px
  &.show
    left 0

/* img block */
.mainwrap
  position absolute
  top 6px
  left 0
  right 0
  bottom 0
  display flex
  z-index 1

  li
    list-style none

  .mainwrap-imglist
    flex 0 1 855px
    padding 0 5px 5px 0
    height 640px

  .mainwrap-imgitem
    position absolute
    left 0
    top 0
    width 855px
    height 640px
    overflow hidden

    &.active
      z-index: 100 !important

    img
      position relative
      left -1px
      top -1px

  .mainwrap-layerlist
    flex 1 0 auto
    height 100%
    border-left 1px solid #ccc
    background-color #eee
    overflow auto

    .mainwrap-layeritem
      border-bottom 1px solid #aaa
      font-size 14px
      font-mono()
      cursor pointer;

      &:before
        content ''
        display inline-block
        height 44px
        width 6px
        vertical-align middle

      span
        display inline-block
        height 24px
        padding 10px 0
        line-height 24px
        vertical-align middle

      &.marked:before
        background-color #69f

      &.active
        background-color #fff